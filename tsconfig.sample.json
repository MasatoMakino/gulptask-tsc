{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "es2015",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./bin",
    "rootDir": "./sample",

    /* allow comment */
    "moduleResolution": "node", //commentable
    "esModuleInterop": true
  },
  "include": ["sample/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
